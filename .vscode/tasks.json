{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-G",
                "'Unix Makefiles'",
                "./.."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "make docs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "make",
            "args": [
                "docs"
            ],
            "dependsOn": [
                "cmake",
                "python"
            ],
            "problemMatcher": []
        },
        {
            "label": "python",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "python",
            "args": [
                "setup.py",
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make"
            ]
        },
        {
            "label": "view docs",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "google-chrome",
            "args": [
                "${workspaceRoot}/build/docs/build/index.html"
            ],
            "dependsOn": [
                "make"
            ],
            "problemMatcher": []
        }
    ]
}